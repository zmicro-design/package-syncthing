#!/bin/bash

export PACKAGE_CORE_NAME="syncthing"
export PACKAGE_CORE_BIN_NAME="$PACKAGE_CORE_NAME"
export PACKAGE_CORE_VERSION=v1.23.0
export PACKAGE_CORE_ORG="syncthing"

export PACKAGE_CORE_ORG_DOREAMON_DESIGN="doreamon-design"
export PACKAGE_CORE_VERSION_DOREAMON_DESIGN=v1.23.0-1.2.0

if [ "$PLUGIN_PACKAGE_USE_DOREAMON_DESIGN" = "true" ]; then
  export PACKAGE_CORE_ORG=$PACKAGE_CORE_ORG_DOREAMON_DESIGN
  export PACKAGE_CORE_VERSION=$PACKAGE_CORE_VERSION_DOREAMON_DESIGN
fi

# export PACKAGE_CORE_RELEASE_DOWNLOAD=${PACKAGE_CORE_RELEASE_DOWNLOAD:-"https://github.com/${PACKAGE_CORE_ORG}/syncthing/releases/download"}
export PACKAGE_CORE_RELEASE_DOWNLOAD="https://github.com/${PACKAGE_CORE_ORG}/syncthing/releases/download"
